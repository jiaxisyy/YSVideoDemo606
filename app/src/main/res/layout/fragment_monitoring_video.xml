<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <SurfaceView
        android:id="@+id/realplay_sv_video"
        android:layout_width="match_parent"
        android:layout_height="607px"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_margin="20px"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv_monitoring_fullScreen"
        android:padding="30px"
        android:cropToPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_full_screen"
        android:layout_alignBottom="@+id/realplay_sv_video"
        android:layout_alignEnd="@+id/realplay_sv_video"
        android:layout_marginEnd="10px"
        android:layout_marginBottom="10px"/>

</RelativeLayout>