<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_setting_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#459FE6"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        >

        <TextView
            android:id="@+id/tv_control_TbTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tv_system_setting"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

        <ImageView
            android:cropToPadding="true"
            android:padding="30px"
            android:id="@+id/iv_control_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10px"
            android:src="@drawable/icon_monitoring_notice"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_setting_blue_reproduction"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_setting_control"
                android:textColor="#FFFFFF"
                android:textSize="40px"
                />

            <ImageView
                android:id="@+id/iv_control_"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50px"
                android:src="@drawable/icon_setting_control_highliht"
                />

                <ImageView
                    android:id="@+id/iv_control_toParameter"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8px"
                    android:layout_toStartOf="@+id/iv_control_"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:cropToPadding="true"
                    android:padding="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_ssetting_parameter_default"/>



        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_setting_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>