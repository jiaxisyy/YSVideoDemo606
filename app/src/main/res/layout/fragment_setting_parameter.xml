<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_setting_parameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#459FE6"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        >

        <TextView
            android:id="@+id/tv_parameter_TbTitile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tv_system_setting"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/iv_parameter_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10px"
            android:cropToPadding="true"
            android:padding="30px"
            android:src="@drawable/icon_monitoring_notice"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_setting_blue_reproduction"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_setting_parameter"
                android:textColor="#FFFFFF"
                android:textSize="40px"
                />


            <ImageView
                android:id="@+id/iv_parameter_toControl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="44px"
                android:cropToPadding="true"
                android:gravity="center"
                android:padding="30px"
                android:src="@drawable/icon_setting_control_default"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="8px"
                android:layout_toStartOf="@+id/iv_parameter_toControl"
                android:src="@drawable/icon_ssetting_parameter_highliht"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_setting_parameter"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#ffffff"
        android:descendantFocusability="beforeDescendants">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>