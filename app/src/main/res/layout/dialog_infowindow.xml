<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_bg_map_infowindow"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_dialog_mapInfoWindow_deviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:paddingLeft="50px"
        android:singleLine="true"
        android:text="设备名称:"
        android:textSize="30px"
        />

    <TextView
        android:id="@+id/tv_dialog_mapInfoWindow_deviceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:paddingLeft="50px"
        android:singleLine="true"
        android:text="设备地址:"
        android:textSize="30px"
        />

    <TextView
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30px"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dialog_mapInfoWindow_dataShow"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_mydevicei_atd_highliht"/>

        <ImageView
            android:id="@+id/iv_dialog_mapInfoWindow_navigation"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_mydevicei_navigable_highliht"/>

    </LinearLayout>


</LinearLayout>