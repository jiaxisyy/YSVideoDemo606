<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="200px"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_warning_listAll_grade"
        android:layout_width="150px"
        android:layout_height="60px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="96px"
        android:gravity="center"
        android:text="红色预警"
        android:textColor="#ffffff"
        android:textSize="30px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120px"
        android:orientation="vertical"
        android:paddingBottom="20px"
        android:paddingTop="20px">

        <TextView
            android:id="@+id/tv_item_warning_listAll_name"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="湿地公园机组"
            android:textColor="#00a1e9"
            android:textSize="38px"/>

        <TextView
            android:id="@+id/tv_item_warning_listAll_date"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="2017-01-05"
            android:textColor="#627281"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv_item_warning_listAll_info"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="湿地公园机组报警"
            android:textColor="#627281"
            android:textSize="32px"/>

    </LinearLayout>


</LinearLayout>