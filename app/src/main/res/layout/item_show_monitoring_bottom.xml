<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_monitoring_bottomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16px"
            android:gravity="center"
            android:text="@string/tv_data_show_internalPressure"
            android:textColor="#efcf60"
            android:textSize="36px"/>

        <ImageView
            android:id="@+id/iv_item_monitoring_bottomPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/home2_data_yellow"/>

        <TextView
            android:id="@+id/tv_item_monitoring_bottomValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:singleLine="true"
            android:text="99.90Kpa"
            android:textColor="#c9d3dc"
            android:textSize="38px"/>


    </LinearLayout>

</LinearLayout>